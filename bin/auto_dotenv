#!/bin/bash
set -eu

if [ ${DOCKER:-"false"} = "true" ] ; then
  echo '> auto_dotenv: ignore dotenv on booting on Docker'
  return
fi

ENV_FILE=".env"
if [ ${NODE_ENV:-"development"} = "test" ] ; then
  ENV_FILE=".env.test"
fi

if [ -e $ENV_FILE ]; then
  # @see https://gist.github.com/mihow/9c7f559807069a03e302605691f85572
  set -a; source ${ENV_FILE}; set +a
fi
